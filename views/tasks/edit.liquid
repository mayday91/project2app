{% layout 'layout.liquid' %}

{% block content %}
<div class="container-md">

<form action="/tasks/{{task._id}}?_method=PUT"  method="POST">
    <fieldset>
    <legend>Edit Task</legend>

    <label class="form-label">Task: </label>
    <input class="form-control" type="text" name="name" placeholder="{{task.task}}">

    <br>
    <label class="form-check-label">Completed: </label>
    <input class="form-check-input" type="checkbox" name="completed" {% if task.completed %} checked {% endif %}>

    </fieldset>
    <br>
    <div class="btn-group">
    <input type="submit" value="Submit Changes" class="btn btn-success">
    <a href="/tasks" class="btn btn-warning">Nevahmind!</a>
    </div>
</form>

</div>
{% endblock %}