{% layout 'layout.liquid' %}

{% block content %}
<div>
    <h1 class="header" style="color: olive">My Tasks</h1>
    
            <!---------------- ADD NEW NOTE MODAL ---------------->
    <div class="add-note">
        <a href="#myModal" class="add-task">New Task</a>
    </div>
    <div id="myModal" class="modal">
        <div class="modal-content">
            <h1 class="">Add Task</h1>
            <form class="note-form" action="/tasks" method="POST">
                <fieldset>
                    <label class="form-label">Name:</label>
                    <input class="form-control" type="text" name="name" placeholder="Enter name">
                    <br>
                    <label class="form-label">Importance:</label>
                    <input class="form-control" type="number" name="importance" placeholder="Enter importance">
                    <br>
                    <label class="form-label">Completed: </label>
                    <input class="form-check-input" type="checkbox" name="completed">
                    <br>
                    <label class="form-label">Date completed (by): </label>
                    <input class="form-control" type="datetime-local" name="datetime">
                    <br>
                    <input type="submit" value="Create New Task" class="create-btn">
                </fieldset>
                <div class="cancel">
                    <a href="#close" class="cancel-btn">Cancel</a>
                </div>
            </form>
        </div>
    </div>
    <!----------- END OF ADD NEW NOTE MODAL ----------->
        <!--------------------  ---------------------->
    <!------------------ BODY  ------------------------>
            <div>
                {% for task in tasks %}
                <div class="card" style="width: 20rem">
                    <h5 class="card-header"><a href="/tasks/{{task._id}}">{{task.name}}</a></h5>
                    <div class="card-body">
                        <h3 class="card-title">
                            {% if task.completed%}
                            Done!
                            {% else %}
                            Not done!
                            {% endif %}
                        </h3>
                        <p class="card-text">Importance level: <span class="imp">{{task.importance}}</span></p>
                        <p>Created by: {{user}}</p>  
                        
                        <a href="/tasks/{{task._id}}" class="btn view">Edit Task</a>
                    <BR>
                    <form action="/tasks/{{task._id}}?_method=DELETE"method="POST">
                        <input type="submit" value="Delete" class="btn btn-delete btn-danger">    
                    </form>
                    </div>
                </div>
                    </div>
                    
                    
                
                
                {% endfor %}
                
            
            </div>
